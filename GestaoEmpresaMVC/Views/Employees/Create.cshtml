@model GestaoEmpresaMVC.Models.ViewModels.EmployeesViewModel

@{
    ViewData["Title"] = "Adicionar Funcionário";
}
<hr />
<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" placeholder="Informe um nome" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" placeholder="Informe um sobrenome" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Age" class="control-label"></label>
                <input asp-for="Employee.Age" class="form-control" placeholder="Informe a idade" />
                <span asp-validation-for="Employee.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Gender" class="control-label"></label>
                <select asp-for="Employee.Gender" class="form-control">
                    <option>Selecione</option>
                    <option value="Masculino">♂ Masculino</option>
                    <option value="Feminino">♀ Feminino</option>                    
                </select>
                <span asp-validation-for="Employee.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DepartmentId" class="control-label"></label>
                <select asp-for="Employee.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Salary" class="control-label"></label>
                <input asp-for="Employee.Salary" class="moneyMask form-control" placeholder="R$ 0,00" />
                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Escolher arquivo...</label>
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.mask.js"></script>
    <script src="~/lib/jquery/dist/jquery.maskMoney.js"></script>
    <script>        
        $(document).ready(function () {
            $(".moneyMask").maskMoney({ thousands: '.', decimal: ',', allowZero: true, prefix: 'R$ ' });
        });
    </script>
    <script type="text/javascript">
        // Para que o nome do arquivo apareca na caixa quando selecionado
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
