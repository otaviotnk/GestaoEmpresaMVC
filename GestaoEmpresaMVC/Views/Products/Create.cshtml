@model GestaoEmpresaMVC.Models.Product

@{
    ViewData["Title"] = "Adicionar Produto";
}
<hr />
<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />
<form asp-action="Create">

    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" placeholder="Nome do Produto" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" placeholder="R$ 0,00" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" placeholder="Quantidade em estoque" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeProductId" class="control-label"></label>
                <select asp-for="TypeProductId" class="form-control" asp-items="ViewBag.TypeProductId"></select>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <textarea asp-for="ProductDescription" class="form-control" placeholder="Informe aqui uma breve descrição do produto."></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-secondary" asp-action="Index">Voltar para a lista</a>
            </div>
        </div>      
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
