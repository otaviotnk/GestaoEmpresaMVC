@model GestaoEmpresaMVC.Models.TypeProduct

@{
    ViewData["Title"] = "Deletar Categoria";
}
<hr />
<h1>@ViewData["Title"]</h1>

<h3 class="alert-danger">Tem certeza que quer deletar esta categoria?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeProdName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeProdName)
